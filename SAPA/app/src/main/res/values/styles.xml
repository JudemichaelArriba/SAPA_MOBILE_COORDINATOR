<resources>
    <style name="WhiteDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">



        <item name="backgroundTint">@android:color/white</item>


        <item name="textAppearanceHeadlineSmall">@style/DialogTitle</item>
        <item name="textAppearanceBodyMedium">@style/DialogMessage</item>


        <item name="buttonBarPositiveButtonStyle">@style/RetryButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/CancelButtonStyle</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="DialogMessage" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">#465462</item>
    </style>

    <style name="RetryButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">#113F67</item>
    </style>

    <style name="CancelButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">#465462</item>
    </style>
</resources>
